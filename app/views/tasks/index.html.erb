<h1>My tasks</h1>

<% @tasks.each do |task| %>
<p> <% if task.completed == true %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
<%= link_to "#{task.title}", task_path(task) %> -
<%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %> </p>
<% end %>

<br>
<br>

<i class="fas fa-plus"></i> <%= link_to "Add new task", new_task_path %>
